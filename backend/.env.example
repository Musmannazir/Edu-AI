# Application Settings
APP_NAME=AI Learning Assistant
APP_ENV=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_learning_assistant
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./ai_learning_assistant.db

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
WHISPER_MODEL=whisper-1

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=learning-assistant

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key-here

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB

# AI Model Settings
EMBEDDINGS_MODEL=text-embedding-ada-002
SUMMARIZATION_MODEL=gpt-4-turbo-preview
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Learning Analytics
MIN_QUIZ_ACCURACY=0.7
WEAK_AREA_THRESHOLD=0.6
